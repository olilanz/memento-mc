{
  "schemaVersion": 1,
  "id": "memento",
  "version": "${version}",
  "name": "Memento: Natural Renewal",
  "description": "Automatic world renewal guided by simple player-defined memory anchors.",
  "authors": ["olilanz"],
  "contact": {
    "homepage": "https://github.com/olilanz/memento-mc",
    "issues": "https://github.com/olilanz/memento-mc/issues"
  },
  "license": "MIT",
  "icon": "assets/memento/icon.png",
  "environment": "server",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "ch.oliverlanz.memento.Memento"
      }
    ]
  },
  "mixins": [
    "memento.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-language-kotlin": ">=${kotlin_loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
