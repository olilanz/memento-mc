{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Gradle: build",
      "type": "shell",
      "command": "./gradlew build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Gradle: runServer (debug)",
      "type": "shell",
      "command": "./gradlew runServer --debug-jvm",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*(Listening for transport dt_socket|Started).*$",
          "endsPattern": "^.*$"
        }
      }
    },
    {
      "label": "terminateAll",
      "command": "echo",
      "type": "shell",
      "args": ["Terminating debug session"]
    }
  ]
}
